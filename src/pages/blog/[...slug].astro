---
export const prerender = false;

import { type CollectionEntry } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { getEntry } from 'astro:content';
import { db, eq, Reactions } from 'astro:db';

const {slug} = Astro.params;
if (!slug) {
  return Astro.redirect("/");
}

type Props = CollectionEntry<'blog'>;

const post = await getEntry("blog", slug)
if (!post) {
  return Astro.redirect("/");
}
const total = await db.select().from(Reactions).where(eq(Reactions.slug, slug));

const { Content } = await post.render();
---

<BlogPost data={post.data} num_of_likes={2} num_of_fire={3} num_of_thumb={1} num_of_rocket={100} slug={slug}>
	
	<Content />
</BlogPost>
